<%- include ("../partials/header") %>

<div class="container">
    
        <h1 style="text-align: center;">Add New Campground</h1>
        <div style="width: 50%; margin: 25px auto;">
            <form method="POST" action="/campgrounds">
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="name" name="name" required>
                </div>
                
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="Image url" name="image" required>
                </div>

                <div class="form-group">
                    <input class="form-control" type="number" placeholder="Price" name="price" min="0.1" step="0.1" required>
                </div>

                <div class="form-group">
                    <textarea class="form-control" type="text" placeholder="Description" name="description" required></textarea>
                </div>

                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block" type="submit">Add Camp</button>
                </div>
               
                </form>
                <a href="/campgrounds">Go to Campgrounds</a>
        </div>
    
</div>

<%- include ("../partials/footer") %>