<%- include("../partials/header") %>

<div class="container">
    
    <h1 style="text-align: center;">Update Campground <%=foundCamp.name%></h1>
    <div style="width: 50%; margin: 25px auto;">
        <form method="POST" action="/campgrounds/<%=foundCamp._id%>/update?_method=PUT">
            <div class="form-group">
                <input class="form-control" type="text" placeholder="name" name="camps[name]" value="<%=foundCamp.name%>" required>
            </div>
            
            <div class="form-group">
                <input class="form-control" type="text" placeholder="Image url" name="camps[image]" value="<%=foundCamp.image%>" required>
            </div>

            <div class="form-group">
                <input class="form-control" type="number" placeholder="Price" name="camps[price]" value="<%=foundCamp.price%>" min="0.1" step="0.1" required>
            </div>

            <div class="form-group">
                <textarea class="form-control" type="text" placeholder="Description" name="camps[description]"><%=foundCamp.description%></textarea>
            </div>

            <div class="form-group">
                <button class="btn btn-lg btn-success btn-block" type="submit">Update Camp</button>
            </div>
           
            </form>
            <a href="/campgrounds">Go to Campgrounds</a>
    </div>

</div>

<%- include("../partials/footer") %>