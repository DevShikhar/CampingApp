<%- include("../partials/header") %>

<div class="container">
    
    <h1 style="text-align: center;">Update Comment for <%=campgrounds.name%></h1>
    <div style="width: 50%; margin: 25px auto;">
        <form method="POST" action="/campgrounds/<%=campgrounds._id %>/comments/<%= comm_id %>?_method=PUT">
         
            <div class="form-group">
                <textarea class="form-control" type="text" placeholder="Edit comment" name="comment[text]"></textarea>
            </div>

            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-inline-block" type="submit">Save
                    <svg class="bi bi-arrow-right-circle-fill" width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd" d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-8.354 2.646a.5.5 0 0 0 .708.708l3-3a.5.5 0 0 0 0-.708l-3-3a.5.5 0 1 0-.708.708L9.793 7.5H5a.5.5 0 0 0 0 1h4.793l-2.147 2.146z"/>
                      </svg>
                    </button>
            </div>
           
            </form>
            <a href="/campgrounds">Go to Campgrounds</a>
    </div>

</div>

<%- include("../partials/footer") %>